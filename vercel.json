{
  "version": 2,
  "installCommand": "cd server && npm install --ignore-scripts",
  "buildCommand": "echo 'Server-only deployment - skipping client build'",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "server/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/index.js"
    }
  ]
}
